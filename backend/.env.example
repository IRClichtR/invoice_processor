# Database configuration
DATABASE_URL=sqlite:///./invoice_db.sqlite

# Application settings
APP_NAME=Invoice Processor API
APP_VERSION=1.0.0
DEBUG=true

# File upload settings
UPLOAD_DIR=uploads
MAX_UPLOAD_SIZE=52428800

# Florence-2 model settings
FLORENCE_MODEL=microsoft/Florence-2-base

# Claude API settings (optional - for low-quality/handwritten document processing)

# Anthropic API Key
ANTHROPIC_API_KEY=your_anthropic_api_key_here # Replace with your actual API key in your .env file

# Claude Vision settings
CLAUDE_MODEL=claude-sonnet-4-20250514
CLAUDE_MAX_TOKENS=4096

# OCR Quality thresholds
OCR_LOW_CONFIDENCE_THRESHOLD=80.0
