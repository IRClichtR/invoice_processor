{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Invoicator",
  "version": "0.1.1",
  "identifier": "com.invoicator.desktop",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Invoicator",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["deb", "dmg", "msi"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": {
      "resources/backend": "backend"
    },
    "linux": {
      "deb": {
        "depends": [
          "tesseract-ocr",
          "tesseract-ocr-eng",
          "tesseract-ocr-fra",
          "poppler-utils"
        ]
      }
    }
  }
}
